mixin input(params={})
  label.input.my-3
    .input__wrap.input__wrap--between
      span.input__label=params.label
      if (params.desc)
        span.input__desc=params.desc

    -
    if (['text', 'email', 'date'].includes(params.type))
      input.input__field(
        type=params.type,
        name=params.name,
        placeholder=params.placeholder,
        pattern=params.pattern,
        required=params.required,
      )
    else if (params.type === 'checkbox')
      each item in params.items
        label.input__wrap
          input.input__checkbox(
            type=params.type,
            name=params.name,
            value=params.value,
            checked=params.checked,
          )
          .input__checkbox-label=item.label

